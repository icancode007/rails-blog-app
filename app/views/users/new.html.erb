<h1> Sign Up! </h1>
<%= render 'shared/errors', obj: @user %>
  <div class="container">
    <div class="col-md-6">
      <%= form_for @user do |f| %>
        <p>
          <%= f.label :username %><br/>
          <%= f.text_field :username, :class => 'form-control'%>
        </p>
        <p>
          <%= f.label :email %><br/>
          <%= f.email_field :email,:class => 'form-control', :rows => '3', :cols =>'3'%>
        </p>
        <p>
          <%= f.label :password %><br/>
          <%= f.password_field :password, :class => 'form-control', :rows => '3', :cols =>'3'%>
        </p>
        <p>
          <%= f.submit :class => 'btn btn-primary', :value =>'Register'%>
        </p>
      <% end %>
        Alredy an User? <%= link_to "Sign In", articles_path%>
      </div>
  </div>
